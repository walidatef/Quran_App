<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#D9FFFB"

        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <ImageView
        android:id="@+id/image_media"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        tools:src="@drawable/quran_1"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/media_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:gravity="start"
            android:layout_toLeftOf="@id/image_media"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/holo_red_dark"
            tools:text="سورة البقرة"
          />
        <TextView
            android:id="@+id/artist_media"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_toLeftOf="@id/image_media"
            android:layout_below="@id/media_name"
            android:textSize="15dp"
            android:textStyle="italic"
            android:alpha=".6"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:textColor="@android:color/background_dark"
            tools:text="سورة البقرة"
            />

    </RelativeLayout>


</androidx.cardview.widget.CardView>
</LinearLayout>